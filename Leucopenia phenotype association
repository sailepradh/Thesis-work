plink --file CaseContrl --pheno ../Leuco_Quali.fam --mpheno 2 --logistic --out Leu_CC_allelic --noweb
plink --file CaseContrl --pheno ../Leuco_Quali.fam --mpheno 2 --logistic --out Leu_CC_allelic --noweb --adjust


